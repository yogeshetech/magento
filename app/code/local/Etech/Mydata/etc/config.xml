<config>
    <modules>
        <Etech_Mydata>
            <version>0.1.0</version>
        </Etech_Mydata>
    </modules>
    <frontend>
        <routers>
            <mydata>
                <use>standard</use>
                <args>
                    <module>Etech_Mydata</module>
                    <frontName>mydata</frontName>
                </args>
            </mydata>
        </routers>
        <layout>
            <updates>
                <mydata>
                    <file>mydata.xml</file>
                </mydata>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <mydata>
                <use>admin</use>
                <args>
                    <module>Etech_Mydata</module>
                    <frontName>mydata</frontName>
                </args>
            </mydata>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <mydata module="mydata">
                <title>Mydata</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="mydata">
                        <title>Manage Items</title>
                        <sort_order>0</sort_order>
                        <action>mydata/adminhtml_mydata</action>
                    </items>
                </children>
            </mydata>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Etech_Mydata>
                            <title>Mydata Module</title>
                            <sort_order>10</sort_order>
                        </Etech_Mydata>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <mydata>
                    <file>mydata.xml</file>
                </mydata>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <mydata>
                <class>Etech_Mydata_Model</class>
                <resourceModel>mydata_mysql4</resourceModel>
            </mydata>
            <mydata_mysql4>
                <class>Etech_Mydata_Model_Mysql4</class>
                <entities>
                    <mydata>
                        <table>mydata</table>
                    </mydata>
                    <profile>
                        <table>profile</table>
                    </profile>
                    <user>
                        <table>user</table>
                    </user>
                  
                </entities>
            </mydata_mysql4>
        </models>
        <resources>
            <mydata_setup>
                <setup>
                    <module>Etech_Mydata</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mydata_setup>
            <mydata_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mydata_write>
            <mydata_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mydata_read>
        </resources>
        <blocks>
            <mydata>
                <class>Etech_Mydata_Block</class>
            </mydata>
        </blocks>
        <helpers>
            <mydata>
                <class>Etech_Mydata_Helper</class>
            </mydata>
        </helpers>
    </global>
</config>